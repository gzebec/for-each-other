@model BPUIO_OneForEachOther.Models.UserBorough

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UserBorough</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />

            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId" disabled></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BoroughId" class="control-label"></label>
                <select asp-for="BoroughId" class="form-control" asp-items="ViewBag.BoroughId"></select>
                <span asp-validation-for="BoroughId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="ViewBag.Status"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                <a class="btn btn-outline-info" asp-controller="Users" asp-action="Details" asp-route-id="@Model.UserId">Cancel</a>
                <!--a class="btn btn-outline-info" asp-action="Index">Cancel</a-->
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
